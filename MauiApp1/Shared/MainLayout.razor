@inherits LayoutComponentBase
@inject ISnackbar Snackbar

<MudDialogProvider />
<MudSnackbarProvider />
<MudThemeProvider  />

<MudLayout>
    <MudAppBar Color="Color.Primary" Class="mb-60">        
        <MudItem xs="8">
            <MudText Class="d-flex align-center justify-center mud-width-full py-8" style="color:#ffffff; font-weight: bold; font-size: 30px" >MAUI - Blazor</MudText>
        </MudItem>  
    </MudAppBar>
   
    <MudMainContent Class="py-0 my-0">
        <MudStack>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-0 mainContainer" Style="margin:0 auto;">
                @Body
            </MudContainer>
        </MudStack>
    </MudMainContent>
   
    <BottomAppBar />

</MudLayout>


@code{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

}